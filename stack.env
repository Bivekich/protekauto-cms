# ===== НАСТРОЙКИ ПОРТА =====
CMS_PORT=3000

# ===== БАЗА ДАННЫХ =====
# Подключение к внешней PostgreSQL базе
DATABASE_URL=postgresql://username:password@your-db-host:5432/protekauto_cms

# ===== АВТОРИЗАЦИЯ =====
# Секретный ключ для NextAuth (генерируйте случайно)
NEXTAUTH_SECRET=your-super-secret-key-here-change-me

# JWT секретный ключ (генерируйте случайно)
JWT_SECRET=your-jwt-secret-key-here-change-me

# URL админки (замените на ваш домен)
NEXTAUTH_URL=https://admin.yourdomain.com

# ===== AWS S3 НАСТРОЙКИ =====
# Регион AWS
AWS_REGION=eu-central-1

# Ключи доступа к AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Название S3 бакета для файлов
AWS_BUCKET_NAME=protekauto-files

# ===== SMS API БИЛАЙН =====
# Логин для входа в систему на сайте https://a2p-sms.beeline.ru
BEELINE_SMS_USER=your-beeline-login

# Пароль для входа в систему на сайте https://a2p-sms.beeline.ru
BEELINE_SMS_PASS=your-beeline-password

# Имя отправителя (необязательно, можно использовать по умолчанию)
BEELINE_SMS_SENDER=ProtekAuto 

# Laximo API
LAXIMO_LOGIN=your_login_here
LAXIMO_PASSWORD=your_password_here

# Laximo Documentation API
LAXIMO_DOC_LOGIN=your_doc_login_here
LAXIMO_DOC_PASSWORD=your_doc_password_here

# ===== YOOKASSA ПЛАТЕЖИ =====
# ID магазина в YooKassa
YOOKASSA_SHOP_ID=your_shop_id_here

# Секретный ключ YooKassa
YOOKASSA_SECRET_KEY=your_secret_key_here

# ===== AUTOEURO API =====
# API ключ для AutoEuro
AUTOEURO_API_KEY=your_autoeuro_api_key_here

# ===== S3 ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ =====
# Альтернативное название бакета (если отличается от AWS_BUCKET_NAME)
AWS_S3_BUCKET=your_s3_bucket_name

# Кастомный endpoint для S3 (если не используется стандартный AWS)
S3_ENDPOINT=https://s3.your-provider.com
